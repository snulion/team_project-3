              <div style="text-align:center;"><button class="btn btn-primary" data-toggle="modal" data-target="#poing" value="<%=@place_p%>" >2등 찾기</button></div>
          </div>
          <!--/.Card content-->

      </div>
      <!--/.Card-->
    </div>
    
  </div>
