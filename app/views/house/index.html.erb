    <!--망고 플레이트-->
    <div class="col-md-4 col-md-offset-2">
      <!--Card-->
      <div class="card">

          <!--Card image-->
          <div class="view overlay hm-white-slight">
              <img src="<%= asset_path("mangoplate.jpg") %>" class="img-fluid" alt="" height="350">
