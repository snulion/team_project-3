          <div class="view overlay hm-white-slight">
              <img src="<%= asset_path("poing.jpg") %>" class="img-fluid" alt="" height="350px">
              <a href="#">
                  <div class="mask"></div>
              </a>
          </div>
          <!--/.Card image-->

          <!--Card content-->
          <div class="card-block">
              <!--Title-->
              <h4 class="card-title" style="text-align: center; font-weight: bold; color:#1e1e1e;">포잉</h4>
